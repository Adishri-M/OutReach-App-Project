@model OutReachApplication.Models.Feedback
@{
    ViewBag.Title = "VolunteerFeedback";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}
<h1>Volunteer Feedback</h1>

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.VolunteerId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.VolunteerId, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.VolunteerId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Are_you_satisfied_for_this_Event, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            Yes
                            @Html.RadioButtonFor(model => model.Are_you_satisfied_for_this_Event, "Yes")
                            No
                            @Html.RadioButtonFor(model => model.Are_you_satisfied_for_this_Event, "No")
                            @Html.ValidationMessageFor(model => model.Are_you_satisfied_for_this_Event, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Have_you_faced_any_difficulties_in_this_Event, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            Yes
                            @Html.RadioButtonFor(model => model.Have_you_faced_any_difficulties_in_this_Event, "Yes")
                            No
                            @Html.RadioButtonFor(model => model.Have_you_faced_any_difficulties_in_this_Event, "No")
                            @Html.ValidationMessageFor(model => model.Have_you_faced_any_difficulties_in_this_Event, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Do_you_think_the_duration_of_the_event_was_good_enough_as_per_your_expectation, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            Yes
                            @Html.RadioButtonFor(model => model.Do_you_think_the_duration_of_the_event_was_good_enough_as_per_your_expectation, "Yes")
                            No
                            @Html.RadioButtonFor(model => model.Do_you_think_the_duration_of_the_event_was_good_enough_as_per_your_expectation, "No")
                            @Html.ValidationMessageFor(model => model.Do_you_think_the_duration_of_the_event_was_good_enough_as_per_your_expectation, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        @Html.LabelFor(model => model.Did_the_event_content_and_delivery_meet_your_expectation, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                           Yes
                            @Html.RadioButtonFor(model => model.Did_the_event_content_and_delivery_meet_your_expectation, "Yes")
                            No
                            @Html.RadioButtonFor(model => model.Did_the_event_content_and_delivery_meet_your_expectation, "No")
                            @Html.ValidationMessageFor(model => model.Did_the_event_content_and_delivery_meet_your_expectation, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        @Html.LabelFor(model => model.Do_you_like_to_recommand_this_event_to_someone, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            Yes
                            @Html.RadioButtonFor(model => model.Do_you_like_to_recommand_this_event_to_someone, "Yes")
                            No
                            @Html.RadioButtonFor(model => model.Do_you_like_to_recommand_this_event_to_someone, "No")
                            @Html.ValidationMessageFor(model => model.Do_you_like_to_recommand_this_event_to_someone, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
<div>
    @Html.ActionLink("Back", "Index")
</div>



@section Scripts {

    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
                window.location.href = "/Volunteer/Index";
            };
        </script>
     }

    <script src="~/Scripts/script-custom-validator.js"></script>



}

