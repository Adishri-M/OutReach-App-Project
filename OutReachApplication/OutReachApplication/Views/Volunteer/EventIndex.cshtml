@model IEnumerable<OutReachApplication.Models.EventDetail>

@{
    ViewBag.Title = "EventIndex";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}
<style>
    a {
        color: black;
    }
</style>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Activity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Place)
        </th>

        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Activity)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>


            <td>
                <div class="btn btn-primary btn-lg active" role="button" aria-pressed="true">
                    @Html.ActionLink("Join", "JoinEvent", "Volunteer", routeValues: new { activity = item.Activity }, htmlAttributes: null)

                </div>


            </td>

            
        </tr>


    }


</table>

<div>
    @Html.ActionLink("Back", "Index")
</div>