@model OutReachApplication.Models.Attendance

@{
    ViewBag.Title = "VolunteerListByActivity";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

<h2>VolunteerListByActivity</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.EventName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(Model => Model.EventName, new SelectList(ViewBag.ByEventName as System.Collections.IEnumerable), "Select an Event")
            @Html.ValidationMessageFor(model => model.EventName, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ok" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "AdminIndex")
</div>
